<DefaultWindow xmlns="https://spacestation14.io"
            MinSize="700 290" Access="Public">
    <BoxContainer Orientation="Vertical">
        <GridContainer Columns="2">
            <GridContainer Columns="3" HorizontalExpand="True">
                <Label Text="{Loc 'access-overrider-window-privileged-id'}" />
                <Button Name="PrivilegedIdButton" Access="Public"/>
                <Label Name="PrivilegedIdLabel" />
            </GridContainer>
        </GridContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="Target Station:" />
            <Control MinWidth="5"/>
            <OptionButton Name="PossibleTargets" Access="Public"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Name="TargetNameLabel" Text="*No item selected*"/>
        </BoxContainer>
        <Control VerticalExpand="True"/>
        <Label Name="MissingPrivilegesLabel" Text =" " />
        <BoxContainer Orientation="Horizontal">
            <Label Text="Current Tag:" />
            <Control MinWidth="5"/>
            <Label Name="CurrentLabel" Text="Station Name"/>
        </BoxContainer>
        <Button Name="LinkButton" Text="Tag Item" Access="Public"/>
        <Button Name="UnlinkButton" Text="Remove Tag" Access="Public"/>
    </BoxContainer>
</DefaultWindow>
